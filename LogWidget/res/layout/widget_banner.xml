<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/banner"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@drawable/popup_background_mtrl_mult"
    android:orientation="horizontal"
    android:visibility="gone"
    tools:showIn="@layout/widget_layout_material">

    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/banner_image_height"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:clickable="false"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/banner_text"
        android:clickable="false"
        android:layout_toRightOf="@id/banner_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:maxHeight="@dimen/banner_max_height"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|left"
        android:gravity="center_vertical|left"
        android:textColor="@color/banner_text_color"
        android:textSize="@dimen/banner_text_size"/>

    <ImageView
        android:id="@+id/banner_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="2dp"
        android:gravity="center_vertical|left"
        android:layout_gravity="top"
        android:src="@drawable/ic_close_box_outline_grey600_18dp"/>
</RelativeLayout>