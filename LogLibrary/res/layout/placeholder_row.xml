<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/placeholder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@drawable/popup_background_mtrl_mult"
    android:orientation="horizontal"
    tools:showIn="@layout/widget_layout_material">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:layout_weight="0"
        android:gravity="center_vertical|center_horizontal"
        android:maxHeight="64dp"
        android:src="@drawable/ic_launcher"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:text="@string/placeholder_row_text"
        android:textColor="@color/banner_text_color"
        android:textSize="@dimen/banner_text_size"/>

</LinearLayout>