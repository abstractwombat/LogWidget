<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/settings_stack"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
>
<LinearLayout
    android:id="@+id/settings_row_inner"
	android:background="@drawable/highlight_statelist_light"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="@dimen/settings_inner_margin"
	android:paddingBottom="@dimen/settings_inner_margin"
	android:layout_marginLeft="@dimen/settings_outer_margin"
	android:layout_marginRight="@dimen/settings_outer_margin"
	android:orientation="horizontal"
	android:gravity="center_vertical"
>
	<ImageView
		android:id="@+id/settings_icon"
		android:layout_width="@dimen/settings_icon_width"
		android:layout_height="match_parent"
		android:src="@drawable/ic_cogs_light"
		android:paddingTop="@dimen/settings_inner_margin"
		android:paddingBottom="@dimen/settings_inner_margin"
		android:scaleType="fitCenter"
		android:layout_weight="0"
		android:clickable="false"
	/>
	<TextView
		android:id="@+id/settings_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/settings_text_size"
		android:textColor="@color/settings_row_text_light"
		android:singleLine="true"
		android:clickable="false"
		android:text="@string/settings_row_text"
		android:layout_weight="1"
	/>
 	<ImageView 
 		android:id="@+id/settings_divider"
 		android:layout_width="1px"
 		android:layout_height="@dimen/settings_divider_height"
 		android:background="@drawable/ic_divider_dashed_holo_light"
 		android:layout_gravity="center_vertical"
 		android:scaleType="center"
		android:layout_weight="0"
 	/>
	<ImageView
		android:id="@+id/refresh_icon"
		android:layout_width="@dimen/settings_refresh_width"
		android:layout_height="match_parent"
		android:paddingLeft="@dimen/settings_inner_margin"
		android:paddingTop="@dimen/settings_inner_margin"
		android:paddingBottom="@dimen/settings_inner_margin"
		android:paddingRight="@dimen/settings_inner_margin"
		android:src="@drawable/ic_action_refresh_light"
		android:background="@drawable/highlight_statelist_light"
		android:scaleType="fitCenter"
		android:layout_weight="0"
	/>
</LinearLayout>
</LinearLayout>