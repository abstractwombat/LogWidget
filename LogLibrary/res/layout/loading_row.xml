<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/loading_row"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="@dimen/loading_inner_margin"
	android:paddingBottom="@dimen/loading_inner_margin"
	android:layout_marginLeft="@dimen/loading_outer_margin"
	android:layout_marginRight="@dimen/loading_outer_margin"
	android:orientation="horizontal"
	android:gravity="center_vertical"
>
	<TextView
		android:id="@+id/loading_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/loading_text_size"
		android:paddingLeft="@dimen/loading_inner_margin"
		android:paddingTop="@dimen/loading_inner_margin"
		android:paddingBottom="@dimen/loading_inner_margin"
		android:paddingRight="@dimen/loading_inner_margin"
		android:textColor="@color/loading_row_text_dark"
		android:singleLine="true"
		android:clickable="false"
		android:text="@string/loading_row_text"
		android:layout_weight="1"
	/>
</LinearLayout>