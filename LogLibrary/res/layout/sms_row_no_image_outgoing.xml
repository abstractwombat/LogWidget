<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:id="@+id/sms_row"
	android:clickable="true"
	android:layout_height="wrap_content"
	android:layout_marginBottom="1dp">
<LinearLayout
    android:id="@+id/sms_row_inner"
	android:background="@drawable/highlight_statelist"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="@dimen/sms_log_inner_margin"
	android:paddingBottom="@dimen/sms_log_inner_margin"
	android:layout_marginLeft="@dimen/sms_log_outer_margin"
	android:layout_marginRight="@dimen/sms_log_outer_margin"
	android:orientation="horizontal"
	android:gravity="top"
>
	<LinearLayout
	    android:id="@+id/sms_text_stack"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical"
		android:gravity="center_vertical|right"
		android:clickable="false"
	>
		<TextView
			android:id="@+id/name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/sms_log_icon_margin"
			android:textSize="@dimen/sms_log_text_size"
			android:textColor="@color/sms_log_text_dark"
			android:singleLine="true"
			android:ellipsize="marquee"
			android:clickable="false"
		/>
		<TextView
			android:id="@+id/message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="false"
			android:textColor="@color/sms_log_text2_dark"
			android:textSize="@dimen/sms_log_text2_size"
			android:background="@drawable/outgoing"
            android:gravity="right"
		/>

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
			<TextView
			    android:id="@+id/date"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:clickable="false"
			    android:singleLine="true"
			    android:textColor="@color/sms_log_text2_dark"
			    android:textSize="@dimen/sms_log_text3_size"
			/>
		    <TextView 
		        android:id="@+id/date_padding_right"
		        android:layout_width="@dimen/sms_date_padding"
			    android:layout_height="match_parent"
			/>
		</LinearLayout>	
	</LinearLayout>

</LinearLayout>
</LinearLayout>